<?xml version="1.0" encoding="utf-8"?>
<jdoconfig xmlns="http://java.sun.com/xml/ns/jdo/jdoconfig"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:noNamespaceSchemaLocation="http://java.sun.com/xml/ns/jdo/jdoconfig">

    <persistence-manager-factory name="transactions-optional">
        <property name="javax.pl.zmudzinski.orm.jdo.PersistenceManagerFactoryClass"
                  value="org.datanucleus.store.appengine.pl.zmudzinski.orm.jdo.DatastoreJDOPersistenceManagerFactory"/>
        <property name="javax.pl.zmudzinski.orm.jdo.option.ConnectionURL" value="appengine"/>
        <property name="javax.pl.zmudzinski.orm.jdo.option.NontransactionalRead" value="true"/>
        <property name="javax.pl.zmudzinski.orm.jdo.option.NontransactionalWrite" value="true"/>
        <property name="javax.pl.zmudzinski.orm.jdo.option.RetainValues" value="true"/>
        <property name="datanucleus.appengine.autoCreateDatastoreTxns" value="true"/>
    </persistence-manager-factory>
</jdoconfig>
